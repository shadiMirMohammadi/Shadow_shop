@model Shadow_shop.Views.ViewModels.RoleViewModel

@{
    ViewBag.Title = $"ویرایش نقش : {Model.Title} |";
}

@using (Html.BeginForm("Edit", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="edit">
        <div class="form-horizontal">
            <div>
                <h4> نقش : @Model.Title</h4>
            </div>
            <div>
                <div class="flex-right">
                    <div class="form-group flex">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label  " })
                        <div class="">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div>
                    @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-info" })
                    <input type="submit" value="ذخیره تغییرات" class="btn btn-success margin-r-5 bottom-font" />
                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>