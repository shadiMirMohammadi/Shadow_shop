@model Shadow_shop.Views.ViewModels.RoleViewModel

@{
    ViewBag.Title = "ثبت نقش جدید |";
}



@using (Html.BeginForm("Create", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="create">
        <div class="form-horizontal">
            <div>
                <h4>ثبت مدیر جدید</h4>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <div class="flex-right">
                    <div class="form-group flex">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label  " })
                        <div class="col-count">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>           
            </div>
            <div class="form-row padding-left-0">
                <div class="col margin-b-5 ">
                    @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-info padding-t-10  margin-l-5" })
                    <input type="submit" value="ثبت" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>

}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

